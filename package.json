{
  "name": "react-calendar",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "homepage": "/calendarapp",
  "type": "module",
  "scripts": {
    "watch:dev-client": "webpack serve --open --config webpack.development.js --config-name client",
    "start:dev-server": "node-dev build/server.cjs",
    "dev": "npm run lint && npm run prettier && npm run build:dev && npm-run-all --parallel start:dev-server watch:dev-client",
    "build:dev": "rm -rf build && webpack --mode development --config webpack.development.js --config-name server",
    "build": "npm run lint && npm run prettier && rm -rf build && npm-run-all build:server build:client",
    "build:server": "webpack --mode=production --config webpack.production.js --config-name server",
    "build:client": "webpack --mode=production --config webpack.production.js --config-name client",
    "start": "node ./build/server.cjs",
    "pm2": "NODE_ENV=production pm2 start npm --name 'calendarapp' -- start",
    "lint": "eslint ./src --fix --ext .js,.jsx",
    "prettier": "prettier --write ."
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.17.7",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.16.11",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.0",
    "dotenv": "^10.0.0",
    "dotenv-webpack": "^7.0.2",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.23.2",
    "file-loader": "^6.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "lint-staged": "^12.1.3",
    "mini-css-extract-plugin": "^1.4.0",
    "node-dev": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "style-loader": "^2.0.0",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^4.9.3",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@babel/preset-react": "^7.13.13",
    "@reduxjs/toolkit": "^1.7.1",
    "async": "^3.2.0",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "bootstrap": "^4.6.0",
    "core-js": "^2.6.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "faker": "^5.5.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mongoose": "^5.13.2",
    "rc-time-picker": "^3.7.3",
    "react-big-calendar": "^0.33.2",
    "react-bootstrap": "^1.5.2",
    "react-day-picker": "^7.4.8",
    "react-dropdown-select": "^4.7.4",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.0",
    "redux-thunk": "^2.3.0",
    "regenerator-runtime": "^0.13.9",
    "uuid": "^8.3.2",
    "validator": "^13.6.0",
    "webpack-merge": "^5.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*/**/*.{js,jsx}": [
      "eslint",
      "prettier --write .",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "react",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "ignorePatterns": [
      "node_modules",
      "build"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
      "react/display-name": 0,
      "react/prop-types": "off",
      "no-unused-vars": "warn",
      "no-console": 1,
      "no-debugger": 1
    }
  }
}
